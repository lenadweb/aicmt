{
  "name": "ai-committer",
  "version": "0.1.0",
  "description": "AI-assisted git commits via OpenRouter",
  "main": "dist/cli.js",
  "bin": {
    "ai-committer": "dist/bin/ai-committer.js"
  },
  "scripts": {
    "build": "tsup",
    "start": "node dist/bin/ai-committer.js",
    "init": "node dist/bin/ai-committer.js init",
    "commit": "node dist/bin/ai-committer.js commit"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "git",
    "commit",
    "cli",
    "openrouter",
    "ai"
  ],
  "private": true,
  "dependencies": {
    "commander": "^12.1.0",
    "prompts": "^2.4.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tsup": "^8.2.4",
    "typescript": "^5.7.2"
  }
}
